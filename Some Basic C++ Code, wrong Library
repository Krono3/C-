#include "util.h"

int main()
{
    cout << "Roll "; 
    
    cout << "\tDie 1";
    
    cout << "\tDie 2";
    
    cout << "\tTotal" << endl;
    
    for(int i = 1; i < 11; i++){
        
        cout << i;
        
        int a = randInt(1, 6);
        cout << "\t" << a;
        
        int b = randInt(1, 6);
        cout << "\t" << b;
        
        int total = a + b;
        cout << "\t" << total << endl;
    }
    
    return 0;
}




////////////////////////////////////////////////////////////////////////////////


#include "util.h"

int main()


{
    int walks = 1000;
    
    double ts = 0;
    
    for(int i = 0; i < walks; i++){
        
        int step = 0;
        
        int loc = 3;
        
        while(loc > 0 && loc < 6){
            step ++;
            
            int ran = randInt(1, 2);
            
            if(ran == 1){
            
                loc ++;
            
            }
            else{
            
                loc --;
            }
           
            
        }
        ts += step;
        
        
    }
    
    cout << ts / walks << endl;
    
    return 0;
}



////////////////////////////////////////////////////////////////////////////////


#include "util.h"

void coinConverter(int quarters, int dimes, int nickels, int pennies){
    double total = 0;
    
    total += 0.25 * quarters;
    total += 0.10 * dimes;
    total += 0.05 * nickels;
    total += 0.01 * pennies;

    cout << "Your total is $" << total << endl;
}

int main(){
    
    int quarters = readInt("Please enter the number quaters: ");
    int dimes = readInt("Please enter the number dimes: ");
    int nickels = readInt("Please enter the number nickels: ");
    int pennies = readInt("Please enter the number pennies: ");
    
    coinConverter(quarters, dimes, nickels, pennies);
    
    return 0;
}



////////////////////////////////////////////////////////////////////////////////


#include "util.h"
#include <cmath>

double que = readDouble("Please enter a temperature: ");

double F = que;
double C = que;

void fahrenheit(){
    
    int F = C * 9 / 5 + 32;
    
    cout << C << " degrees Celsius is " << F << " degrees Fahrenheit" << endl;
}

void celsius(){
    
    int C = (F - 32) * 5 / 9;
    
    cout << F << " degrees Fahreinheit is " << C << " degrees Celsius" << endl;
    
}

int main(){
    
    fahrenheit();
    celsius();

    
    return 0;
}




////////////////////////////////////////////////////////////

#include "util.h"
#include <string>

bool isRunning = true;

int numCoins = 100;

string translateNum(int num){
    
    if(num <= 6){
        
        
        return "LO";
        
    }else if(num >= 8){
        
        return "HI";
        
    }else{
        
        return "MID";
    }
    
}


void getGuess(int currentWager){
    
    int rannum = randInt(1, 13);
    
    cout << "Enter LO to guess number 1-6" << endl;
    cout << "Enter HI to guess number 8-13" << endl;
    
    string inp = readLine("Your guess: ");
    
    cout << "The number is " << rannum << endl;
    
    if(translateNum(rannum).find("LO") && inp.find("LO")){
        
        cout << "You win!\n";
        
        numCoins += currentWager;
        
    }else if(translateNum(rannum).find("HI") && inp.find("HI")){
        
        cout << "You win!\n";
        
        numCoins += currentWager;
        
    }else{
        
        cout << "You lose!\n";
        
        numCoins -= currentWager;
    }
}
int main(){
    int wager;
    
    while(isRunning){
        cout << "You currently have " << numCoins << " coins.\n"; 
        wager = readInt("How much would you like to wager?");
        
        getGuess(wager);
        
        if (numCoins == 0) {
            isRunning = false;
            cout << "Good Game!\n";
        }
    }
    
    
    return 0;
}
